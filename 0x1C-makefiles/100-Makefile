# Task 6 Makefile

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = /bin/rm -f

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(CFLAGS) -c $(SRC)
    $(CC) $(OBJ) -o $(NAME)

clean:
    $(RM) *~ $(NAME)

oclean:
    $(RM) $(OBJ)

fclean: clean oclean

re: fclean all
